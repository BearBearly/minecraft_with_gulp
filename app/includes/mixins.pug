mixin makeList(list)
  ul
    each item in list
      li
        a(href=item.href)=item.title
          if item.sublevel
            +makeList(item)
-;

mixin makePhoneList(contacts)
  table.contacts
    each item in contacts
      tr
        td.contact__title=item.title
        td
          each phone in item.phones
            p
              a(href="tel:"+phone).contact__phone=phone
-;
  
mixin listMenu(arr)
  ul
    each item in arr
      li
        a(href="#")=item.title
        -if(item.sublist)
          +listMenu(item.sublist)

mixin makePost(item)
  .column.column-phablet-1-3.column-posts.v-step-bottom
    .post
      .post__top
        a(href="#").post__date=item.date
        .post__text=item.text
      a(href="#").post__img
        img(src='img/'+item.img alt='')

                